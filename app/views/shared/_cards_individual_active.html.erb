<div class="col-11 card-ongoing-quests d-flex flex-row">
  <div class="col-3 py-1 image-container-ongoing d-flex justify-content-center align-items-center">
    <%= image_tag task.individual_challenge.img_url, alt: "Card image cap", class:"card-img-rounded" %>
  </div>
  <div class="col-9 pt-2 pb-3">
    <div class="d-flex justify-content-end align-items-end mb-0">
      <p class="text-end pe-3 <%= 'mb-1' if task.individual_challenge.title.length > 18 %>">
        <%= (task.date - Date.current).round %> days remaining.
      </p>
    </div>
    <div class="d-flex justify-content-start align-items-start">
      <h4><%= task.individual_challenge.title %></h4>
    </div>
  </div>
</div>
