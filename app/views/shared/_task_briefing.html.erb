<div class="container">
  <div class="briefing-card d-flex flex-column">
    <div class="mb-auto">
      <h3 class="briefing-title ms-0 ps-0 text-center"><%= challenge.title %></h3>
      <img class="briefing-card-img-top" src="https://images.unsplash.com/photo-1627630737366-fbd46d8c11f5?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Card image cap">
      <div class="overflow-y-auto mx-2">
        <p class="card-text text-secondary-emphasis" style="font-size:18px;">
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= prompt %>
        </p>
      </div>
    </div>

    <% if current_page?(couple_task_path(task)) %>
      <% if task.active? && task.completed.nil?  %>
        <%= button_to "Mark as completed", mark_as_completed_couple_task_path(task), method: :patch, class: "begin-quest", style: "margin-bottom: 90px;" %>
      <% end %>
    <% elsif current_page?(individual_task_path(task)) && task.user == current_user %>
      <%= button_to "Mark as completed", mark_as_completed_individual_task_path(task), method: :patch, class: "begin-quest", style: "margin-bottom: 90px;" %>
    <% end %>

  </div>
</div>
