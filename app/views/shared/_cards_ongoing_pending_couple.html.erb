<div class="col-11 card-ongoing-quests d-flex flex-row">
  <div class="col-3 py-1 image-container-ongoing d-flex justify-content-center align-items-center">
    <%= image_tag task.couple_challenge.img_url, alt: "image", class:"card-img-rounded ms-4" %>
  </div>
  <div class="col-9 pt-2 pb-3">
    <div class="d-flex justify-content-end mb-0 me-4">
      <% if task.invited_id == current_user.id %>
        <p><strong><em>received on <%= task.created_at.strftime("%b %e") %></em></strong></p>
      <% else %>
        <p><em>sent on <%= task.created_at.strftime("%b %e") %></em></p>
      <% end %>
    </div>
    <div class="d-flex justify-content-start ms-2">
      <h4 style="font-family: Berkshire Swash, serif;"><%= task.couple_challenge.title %></h4>
    </div>
      <div class="d-flex justify-content-end align-items-end">
        <h4 class="avatares pe-3" style="padding-top: 5px;">
          <% if current_user == User.find(task.invited_id) && task.active == false %>
            <%= image_tag current_user.avatar_url, alt: "User avatar", class: "avatar-pending" %>
          <% else %>
            <%= image_tag current_user.avatar_url, alt: "User avatar", class: "avatar-accepted" %>
          <% end %>
          <% if @partner == User.find(task.invited_id) && task.active == false %>
            <%= image_tag @partner.avatar_url, alt: "Partner avatar", class: "avatar-pending" %>
          <% else %>
            <%= image_tag @partner.avatar_url, alt: "Partner avatar", class: "avatar-accepted" %>
          <% end %>
        </h4>
      </div>
  </div>
</div>
