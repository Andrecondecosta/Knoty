<div class="col-11 card-ongoing-quests d-flex flex-row">
  <div class="col-3 py-1 image-container-ongoing d-flex justify-content-center align-items-center">
    <%= image_tag task.couple_challenge.img_url, alt: "image", class:"card-img-rounded ms-4" %>
  </div>
  <div class="col-9 pt-2 pb-3">
    <div class="d-flex justify-content-end align-items-end mb-0">
      <p class="text-end pe-3"><%= (task.completion_date - Date.current).round %> days remaining.</p>
    </div>
    <div class="d-flex justify-content-start align-items-start ms-2">
      <h4 style="font-family: Berkshire Swash, serif;"><%= task.couple_challenge.title %></h4>
    </div>
    <div class="row">
      <div class="d-flex justify-content-end align-items-end">
        <h4 class="avatares pe-5"></h4>
      </div>
    </div>
  </div>
</div>
