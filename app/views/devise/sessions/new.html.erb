<div class="d-flex justify-content-center align-items-center pt-5 mt-5 mb-3 ">
  <div class="box bg-white p-3 rounded-4">
  <h2 class="text-center home_login_h2">LOGIN</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Login", class: "login-button align-right" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
