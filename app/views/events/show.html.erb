
<p class="event-show ms-3 fs-2">
<%= @event.date.strftime("%A, %d %B") %>
</p>

<div class="scrollable-content-show">
  <% @day_events.each do |event| %>
    <div class="glass-morph-card m-3" style="min-height: 110px; padding-left: 15px; border-radius: 15px;">
      <div class="details ms-2" style="flex-basis: 70%; max-width: 100%; word-wrap: break-word;">
        <ul>
          <li>
            <h4 class="event-title" style="align-self: flex-start; font-size: 20px; margin-bottom: 2px; padding-top: 10px">
              <strong><%= event.name %></strong>
            </h4>
          </li>
        </ul>
          <div class="events-details">
            <%= event.details %>
          </div>
      </div>
      <div class="d-flex justify-content-end align-items-end mt-1">
        <%= link_to edit_event_path(event) do %>
          <i class="fas fa-pen-square m-2 fa-lg icon-show "></i>
        <% end %>
        <%= link_to event_path(event), data:{turbo_method: :delete, turbo_confirm:"Delete mission?"} do %>
          <i class="fas fa-trash-alt m-2 fa-lg icon-show"></i>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="mt-1">
  <%= link_to events_path, class: "arrow-back" do %>
      <%= image_tag "direction-sign.png", alt: "direction", style: "width: 35px; margin-left: 20px;" %>
    <% end %>
</div>
