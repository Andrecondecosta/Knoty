
<div class="container">
  <div class="d-flex justify-content-between mb-1">
    <%= button_to 'Add Memory', add_memory_events_path, method: :get, class: 'btn btn-outline-dark' %>
    <%= link_to 'Calendar', events_path, class: 'btn btn-outline-dark' %>
  </div>
  <div class="d-flex justify-content-center">
    <h1 class="m-0">Timeline</h1>
  </div>
  <section class="timeline <%= 'no-memories' unless @events.any? { |event| event.is_memory } %>">
    <div class="container">
      <% if @events.any? { |event| event.is_memory } %>
        <% @events.each_with_index do |event, index| %>
          <% if event.is_memory %>
            <div class="timeline-item">
              <div class="timeline-img bg-primary text-white text-center d-flex align-items-center justify-content-center" style="width: 75px; height: 30px; border-radius: 15px; margin-top: 0px; font-size: 11px; box-shadow: 0 0 10px rgba(0, 123, 255, 1);">
                <strong>
                  <%= event.date.strftime("%d %b %Y") %>
                </strong>
              </div>

              <div class="timeline-card-product mb-5 <%= 'flex-row-reverse' if index.even? %>">
                <%# if @event.image_url.present? %>
                  <!--<img src="<%#= @event.image_url %>" />-->
                <%# end %>
                <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg"/>
                <div class="timeline-card-product-infos <%= index.even? ? 'text-align-right' : 'text-align-left' %>" style="padding: 8px; display: flex; flex-direction: column; justify-content: space-between;">
                  <div>
                    <h4><%= event.name %></h4>
                    <p><%= event.details %></p>
                    <p><%= event.location %></p>
                  </div>
                  <div class="d-flex <%= index.even? ? 'flex-row' : 'flex-row-reverse' %> justify-content-start mt-auto">
                    <%= link_to edit_event_path(event, origin: 'timeline'), class: 'icon-button-timeline' do %>
                      <i class="fas fa-pen-square m-2 fa-lg "></i>
                    <% end %>
                    <%= button_to event_path(event, origin: 'timeline'), method: :delete, data: { confirm: 'Are you sure?' }, class: 'icon-button-timeline' do %>
                      <i class="fas fa-trash-alt m-2 fa-lg"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <p style="font-size: 26px; text-align: center; ">You haven't added any memories ðŸ˜¦</p>
      <% end %>
    </div>
  </section>
</div>
