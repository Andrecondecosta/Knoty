<h2>Timeline</h2>
<div class=" add-memory d-flex justify-content-end ">
  <%= button_to 'Add Memory', add_memory_events_path, method: :get, class: 'btn btn-outline-dark' %>
</div>
<section class="timeline">
  <div class="container">
    <% @events.each_with_index do |event, index| %>
      <% if event.is_memory %>
        <div class="timeline-item">
          <div class="timeline-img">
            <strong>
            <%= event.date.strftime("%d %b %Y") if event.date %>
            </strong>
          </div>

          <div class="timeline-card-product mb-5 <%= 'flex-row-reverse' if index.even? %>">
            <%# if @event.image_url.present? %>
              <!--<img src="<%#= @event.image_url %>" />-->
            <%# end %>
            <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
            <div class="timeline-card-product-infos">
              <h2><%= event.name %></h2>
              <p><%= event.details %></p>
              <%= event.location %>
            <%= link_to events_path(event), data:{turbo_method: :delete, turbo_confirm:"Delete event?"} do %>
              <i class="fas fa-trash-alt m-2 fa-lg"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
