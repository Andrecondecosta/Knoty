<div class="container mt-4 d-flex flex-column">
  <div class="p-2">
    <div class="d-flex align-items-center">
      <i class="fa-solid fa-file-lines fa-2x me-2 pb-3"></i>
      <h2><b>Mission Board</b></h2>
    </div>
  </div>

  <div class="mb-auto">
    <% @missions.each do |mission| %>
      <div class="mb-3">
        <%= render 'mission_show', mission: mission %>
      </div>
    <% end %>
  </div>

  <div class="mt-auto text-end">
    <%= link_to new_mission_path, class: "btn btn-primary rounded-circle", style: "width: 50px; height: 50px;" do %>
      <i class="fas fa-plus"style="font-size: 24px; padding-left: 1px; padding-top: 6px;"></i>
    <% end %>
  </div>
</div>
