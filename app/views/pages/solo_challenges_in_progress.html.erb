<div class="container mt-3" data-controller="quests">
  <div class="content bg-light rounded-4"  style="height:700px;--bs-bg-opacity: 0.6;">
    <!-------------------------- Tab LINKS -------------------------->
    <div class="logs_plaques">
      <div class="mt-0 mb-2 pt-4 w-100">
            <div class="d-flex justify-content-center p-0 fs-5 position-relative">
              <img src="<%= asset_path 'https://res.cloudinary.com/dvgcwuo68/image/upload/v1710202587/log2-removebg-preview_jeecey.png' %>" class="position-absolute background-image-2">
              <div class="position-relative" style="z-index: 3; font-weight: bold; padding-left: 14px">Solo Quests</div>
            </div>
      </div>
      <div class="row p-0 mb-3 pt-4">
        <div class="col-6 d-flex justify-content-center p-0 position-relative">
          <input type="radio" class="btn-check" name="solo-in-progress" id="btnradio3" checked>
          <label class="btn btn-outline-secondary rounded-pill sign-button-mine" for="btnradio3" data-action="click->quests#indivQuests1" style="z-index: 1; padding-top: 3px; font-size: 18px;">Yours</label>
          <img src="<%= asset_path 'https://res.cloudinary.com/dvgcwuo68/image/upload/v1710202587/3cb5c6ac-b9c7-4a64-b071-ef4d3cf61091-removebg-preview_gdhoda.png' %>" class="position-absolute wooden-sign-mine">
        </div>
        <div class="col-6 d-flex justify-content-center ps-2  position-relative">
          <input type="radio" class="btn-check" name="solo-in-progress" id="btnradio4">

          <label class="btn btn-outline-secondary rounded-pill sign-button-name ps-1" for="btnradio4" data-action="click->quests#indivQuests2" style="z-index: 1; padding-top: 3px; font-size: 18px;">
            His/Hers
          </label>
          <img src="<%= asset_path 'https://res.cloudinary.com/dvgcwuo68/image/upload/v1710202587/3cb5c6ac-b9c7-4a64-b071-ef4d3cf61091-removebg-preview_gdhoda.png' %>" class="position-absolute wooden-sign-name">
        </div>
      </div>
    </div>

    <!-------------------------- CURRENT USER INDIVIDUAL QUESTS TAB CONTENT -------------------------->
    <div class="justify-content-center scrollable-content-quest-tab"
      data-quests-target="indivQuestsTab1">
        <% unless @my_solo_tasks.nil? || @my_solo_tasks.empty?  %>
          <% @my_solo_tasks.each do |task| %>
            <%= link_to individual_task_path(task), class:"link-underline link-underline-opacity-0 text-dark my-2 px-2" do %>
              <%= render 'shared/cards_individual_active', task: task %>
            <% end %>
          <% end %>
        <% else %>
          <h4 class="text-center text-secondary" style="margin-top: 150px;">At the moment,<br> you haven't embarked on a <br>solo adventure quest. ğŸ§­</h4>
        <% end %>
    </div>

      <!-------------------------- PARTNERS INDIVIDUAL QUESTS TAB CONTENT -------------------------->
    <div class="justify-content-center scrollable-content-quest-tab d-none"
      data-quests-target="indivQuestsTab2">

      <% unless @partner_solo_tasks.nil? || @partner_solo_tasks.empty? %>
        <% @partner_solo_tasks.each do |task| %>
          <%= link_to "#", class:"link-underline link-underline-opacity-0 text-dark my-2 px-2" do %>
            <div class="blur-filter">
              <%= render 'shared/cards_individual_active', task: task %>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <h4 class="text-center text-secondary" style="margin-top: 150px;">At the moment,<br> your partner hasn't embarked on a <br>solo adventure quest. ğŸ§­</h4>
      <% end %>
    </div>
  </div>
    <%= link_to quest_log_path do %>
      <img src="<%= asset_path 'https://res.cloudinary.com/dvgcwuo68/image/upload/v1710412462/wooden-arrow_xccyom.png' %>" class="arrow-back-explore">
      <h5 class="go-back-text">back</h5>
    <% end %>
</div>
