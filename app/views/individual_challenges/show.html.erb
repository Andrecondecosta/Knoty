
<div class="container">
  <div class="briefing-card">
    <h3><%= @individual_challenge.title %></h3>
    <img class="briefing-card-img-top" src="https://images.unsplash.com/photo-1627630737366-fbd46d8c11f5?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="Card image cap">
    <div class="briefing-card-body">
      <p class="card-text text-light">
        <%= @individual_challenge.details %>
      </p>
    </div>

    <div class="card-footer d-flex justify-content-center align-items-center bg-transparent">
      <div class="rating">
        <%= '⭐' * @individual_challenge.difficulty%>
      </div>
      <i class="fas fa-user-friends"></i>
      <button type="button" class="btn btn-primary ml-auto">Begin</button>
    </div>
  </div>
</div>
